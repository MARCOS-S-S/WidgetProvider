<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_spotify_background"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <!-- Ícone do Spotify -->
    <ImageView
        android:id="@+id/spotify_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_spotify"
        android:contentDescription="Spotify"
        android:tint="@android:color/white" />

    <!-- Informações da música -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/song_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blinding Lights"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/artist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Weeknd"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:alpha="0.8"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- Controles de música -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Botão Anterior -->
        <ImageButton
            android:id="@+id/btn_previous"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="4dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_skip_previous"
            android:contentDescription="Música Anterior"
            android:tint="@android:color/white" />

        <!-- Botão Play/Pause -->
        <ImageButton
            android:id="@+id/btn_play_pause"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginHorizontal="4dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_play_arrow"
            android:contentDescription="Play/Pause"
            android:tint="@android:color/white" />

        <!-- Botão Próxima -->
        <ImageButton
            android:id="@+id/btn_next"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_skip_next"
            android:contentDescription="Próxima Música"
            android:tint="@android:color/white" />

    </LinearLayout>

</LinearLayout>
